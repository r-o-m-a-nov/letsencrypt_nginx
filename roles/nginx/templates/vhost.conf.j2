server {
    listen 80;
    server_name {{domain_name_http}};
                
    access_log /var/log/{{domain_name_http}}_access.log;
    error_log /var/log/{{domain_name_http}}_error.log;
    

    location / {     
        return  200 "OK! Http  {{domain_name_http}}--\n";                                                                      
        }
    location /.well-known/acme-challenge {
        root /opt/acme;
        allow all;
        }
}        
